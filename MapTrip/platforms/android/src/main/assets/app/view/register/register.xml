<Page loaded="onPageLoaded">
    <StackLayout class="registerformImage" orientation="vertical" verticalAlignment="up" TextWrapt="true" width="strech" height="strech">
        <StackLayout class="registerform" orientation="vertical" TextWrapt="true">
            <TextField id="username" hint="Email Address" text="{{ username }}" />
            <TextField id="password" hint="Password" secure="true" text="{{ password }}" />
            <TextField id="confirmpassword" hint="Confirm password" secure="true" text="{{ confirmpassword }}" />
            <Button id="signUpButton" colSpan="2" text="Sign Up" width="100" tap="{{ tapAction }}" />
        </StackLayout>
    </StackLayout>
</Page>
