<Page loaded="onPageLoaded">
   <StackLayout class="registerformImage" orientation="vertical" verticalAlignment="center" TextWrapt="true" width="strech" height="500" >
<GridLayout class="registerform" columns="*,3*" rows="*,*,*,*" width="strech" height="250">
        
        <TextField id="username" hint="Email Address" text="{{ username }}" width="200" col="1" row="0"/>

        <Label text="Password:" col="0" row="1" />
        <TextField id="password" secure="true" text="{{ password }}" width="200" color="white" col="1" row="1"/>

        <Label text="Comfirm Password:" col="0" row="2" TextWrapt="true"/>
        <TextField id="confirmpassword" secure="true" text="{{ confirmpassword }}" width="200" col="1" row="2"/>

        <Button id="signUpButton" colSpan="2" text="Sign Up" width="100" col="0" row="3" tap="{{ tapAction }}"/>
  
  </GridLayout>
  </StackLayout> 
</Page>