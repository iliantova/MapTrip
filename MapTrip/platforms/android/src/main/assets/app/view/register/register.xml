<Page loaded="onPageLoaded">
   <StackLayout class="registerformImage" orientation="vertical" verticalAlignment="center" TextWrapt="true" width="strech" height="500" >
<StackLayout class="registerform" width="strech" height="250">
        
        <TextField id="username" hint="Username" text="{{ username }}"/>

        <TextField id="password" hint="Password" secure="true" text="{{ password }}" />

        <TextField id="confirmpassword" hint="Comfirm Password" secure="true" text="{{ confirmpassword }}"/>

        <Button id="signUpButton" text="Sign Up" width="200" tap="{{ tapAction }}"/>
  
  </StackLayout>
  </StackLayout> 
</Page>