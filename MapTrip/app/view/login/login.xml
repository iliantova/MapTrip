<Page loaded="onPageLoaded">
    <StackLayout class="registerformImage" orientation="vertical" verticalAlignment="bottom" TextWrapt="true" width="strech" height="strech">
        <StackLayout class="registerform" width="strech" height="strech">
            <TextField id="username" hint="Username" text="{{ username }}" />
            <TextField id="password" hint="Password" secure="true" text="{{ password }}" />
            <Button id="registerUpButton" text="Login" width="100" tap="{{ loginButton }}" />
            <Button id="signUpButton" text="SignUp" width="100" tap="{{ register }}" />
        </StackLayout>
    </StackLayout>
</Page>
